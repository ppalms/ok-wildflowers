<div id="show_<%= dom_id @location %>">
  <div class="pt-4 pb-2">
    <%= link_to sanitize("&larr; Back"), location_path(@location) %>
  </div>
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="notice" id="notice"><%= notice %></p>
    <% end %>
    <h2>Note</h2>
    <div class="text-lg font-bold text-stone-700"><%= @location.name %> - <%= @note.created_at.strftime("%m/%d/%Y") %></div>
    <%= render partial: 'locations/notes/note', locals: { note: @note }%>
    <div class="mt-6 flex justify-center space-x-2">
      <%= link_to "Edit", edit_location_note_path(@location, @note), class: "btn-secondary" %>
      <%= button_to "Delete", location_note_path(@location, @note), method: :delete, class: "btn-danger", form: { data: { turbo_confirm: "Are you sure?" } } %>
    </div>
  </div>
</div>
