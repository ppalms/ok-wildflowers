<div class="w-full">
  <div id="modal_backdrop" class="absolute top-0 left-0 w-full h-full backdrop-blur-lg hidden transition">
  </div>
  <div id="search_modal_wrapper" class="absolute top-0 left-0 w-full h-full hidden">
    <%# TODO: rename "search_modal_wrapper" to "search_modal" %>
    <%# TODO: rename "search_modal" to "search_plants" %>
    <%= turbo_frame_tag "search_modal", loading: "lazy" do %>
      <div class="loading-spinner">Loading...</div>
    <% end %>
  </div>
  <div id="plant_summary_modal_wrapper" class="absolute top-0 left-0 w-full h-full hidden">
    <%= turbo_frame_tag "plant_summary_modal" %>
  </div>
  <div class="mb-6">
    <%= link_to sanitize("&larr; Browse locations"), locations_path %>
  </div>
  <% if notice.present? %>
    <div class="flex justify-center">
      <p class="notice" id="notice"><%= notice %></p>
    </div>
  <% end %>
  <%= turbo_frame_tag @location do %>
    <div class="flex justify-between items-center mt-6">
      <h1><%= @location.name %></h1>
      <%= link_to "Edit", edit_location_path(@location), class: "btn-secondary" %>
    </div>
  <% end %>
  <div class="my-2">
    <%= render partial: "overview" %>
  </div>
  <div class="my-2">
    <%= render partial: "plant_list" %>
  </div>
  <div class="mt-6 text-center">
    <%= button_to "Delete this location", @location, method: :delete, class: "btn-danger", form: { data: { turbo_confirm: "Are you sure?" } } %>
  </div>
</div>
<script>
  function showModal(modal_id) {
    document.getElementById(modal_id).classList.remove('hidden');
    document.getElementById('modal_backdrop').classList.remove('hidden');
  }

  function hideModal(modal_id) {
    document.getElementById('modal_backdrop').classList.add('hidden');
    document.getElementById(modal_id).classList.add('hidden');
  }
</script>
