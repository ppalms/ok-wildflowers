<div class="w-full">
  <%= link_to sanitize("&larr; Back to locations"), locations_path, class: "font-medium py-3" %>
  <% if notice.present? %>
    <p class="notice" id="notice"><%= notice %></p>
  <% end %>
  <%= turbo_frame_tag @location do %>
    <div class="flex justify-between items-center mt-6">
      <h1><%= @location.name %></h1>
      <%= link_to "Edit", edit_location_path(@location), class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    </div>
  <% end %>
  <div class="my-2">
    <%= render partial: "overview" %>
  </div>
  <div class="my-2"> 
    <h2>Plants</h2>
    <%= render partial: "plant_list" %>
  </div>
  <div class="my-2">
    <h2>Add a Plant</h2>
    <%= render partial: "plant_form" %>
  </div>
  <div class="inline-block">
    <%= button_to "Destroy this location", @location, method: :delete, class: "btn-danger", form: { data: { turbo_confirm: "Are you sure?" } } %>
  </div>
</div>

