<div class="max-w-md mx-auto pt-12">
  <h2>Change your password</h2>
  
  <%= form_with(model: resource, as: resource_name, url: password_path(resource_name), class: "flex flex-col gap-y-4 mt-4", html: { method: :put } ) do |f| %>
    <%= render "layouts/error_messages", errors: resource.errors %>
 
    <%= f.hidden_field :reset_password_token %>
    <div class="field">
      <%= f.label :password, "New password" %>
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
      <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "text-field" %>
    </div>
    <div class="field">
      <%= f.label :password_confirmation, "Confirm new password" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "text-field" %>
    </div>
    <div class="actions">
      <%= f.submit "Change my password", class: "btn-primary" %>
    </div>
  <% end %>
  
  <%= render "devise/shared/links" %>
</div>
