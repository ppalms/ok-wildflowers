<div class="max-w-md mx-auto pt-12">
  <h2>Forgot your password?</h2>
  <%= form_with(model: resource, as: resource_name, url: password_path(resource_name), html: { method: :post }, class: "flex flex-col gap-y-4 mt-4", data: { turbo: false }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "text-field" %>
    </div>
    <div class="actions">
      <%= f.submit "Send me reset password instructions", class: "btn-primary" %>
    </div>
  <% end %>
  <%= render "devise/shared/links" %>
</div>