<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <%= render @plant %>

    <%= link_to "Edit this plant", edit_plant_path(@plant), class: "btn-secondary" %>
    <%= link_to "Back to plants", plants_path, class: "btn-secondary" %>
    <div class="inline-block">
      <%= button_to "Destroy this plant", @plant, method: :delete, class: "btn-danger", form: { data: { turbo_confirm: "Are you sure?" } } %>
    </div>
  </div>
</div>
